{
  "name": "jaguar-with-lsp-dap",
  "version": "1.0.0",
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start:server": "node out/server.js --stdio",
    "start:debugAdapter": "node out/debugAdapter.js"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.42.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.94.0",
    "typescript": "^5.0.0",
    "vscode": "^1.78.0" 
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "contributes": {
    "languages": [
      {
        "id": "plaintext",
        "aliases": [
          "Plain Text"
        ],
        "extensions": [
          ".txt"
        ]
      }
    ]
  }
}
